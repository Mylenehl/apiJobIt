{% extends 'base.html.twig' %}

{% block body %}
    <main>
        {% for job in jobs %}
            <div class="card mb-3">
                <div class="carte">
                   <img src="{{job.logo}}" alt="tableau" class="img-fluid">
                    <div>    
                         <a href="{{ path('jobsingle') }}?id={{job.id}}"><p>{{ job.getContrat() }}</p></a> 
                        <p>{{ job.getEntreprise() }}</p>
                        <p>{{ job.getLieu() }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </main>
{% endblock %}